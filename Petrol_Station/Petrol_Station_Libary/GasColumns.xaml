                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Номер на картата" Grid.Row="0" Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                        <TextBox x:Name="CardInput1" Grid.Row="1" VerticalAlignment="Center" Foreground="White" Height="18" HorizontalAlignment="Center"  Width="80" Background="#0C1017">
