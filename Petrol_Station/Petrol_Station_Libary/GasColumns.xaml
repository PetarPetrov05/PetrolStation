                                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                                <TranslateTransform X="0" />
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.3" />
