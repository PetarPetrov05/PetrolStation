                                                    <TextBlock x:Name="arrow1" Text="➜" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                                    <Image x:Name="MoneyImage1" Visibility="Hidden" Width="20" Source="D:\VisualStudio\Projects\Petrol_Station\Images\icons8-money-64.png"  VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                                                </Grid>

                                            </Border>
                                        </Border>
