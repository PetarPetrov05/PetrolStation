                                                            <ColumnDefinition Width="1.5*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Отстъпка-" Foreground="White" FontSize="10" HorizontalAlignment="Right"></TextBlock>
                                                        <TextBlock Grid.Column="1" x:Name="DiscountCard1" Text="0.00" Foreground="White" FontSize="10"></TextBlock>
                                                    </Grid>
                                                    <!--Final Price-->
                                                    <Border Grid.Row="3" BorderThickness="0,1,0,0">
                                                        <Border.BorderBrush>
                                                            <VisualBrush>
                                                                <VisualBrush.Visual>
                                                                    <Rectangle Stroke="White" StrokeDashArray="1 2" StrokeThickness="5" Width="110" Height="1"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Border.BorderBrush>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="1.5*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="Цена:" Foreground="White" FontSize="11" HorizontalAlignment="Right"></TextBlock>
                                                            <TextBlock x:Name="FinalPrice1" Grid.Column="1" Text="0.00" Foreground="White" FontSize="11"></TextBlock>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                                <!--After Card Clicked-->
                                <Border x:Name="BorderAfterCardClicked1" Grid.Row="1" BorderBrush="White" BorderThickness="0.2" Visibility="Collapsed">
